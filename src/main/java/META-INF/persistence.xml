<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="tedw"
		transaction-type="RESOURCE_LOCAL">
		<class>br.upf.ads.tedw.beans.Cidade</class>
		<class>br.upf.ads.tedw.beans.Pessoa</class>
		<class>br.upf.ads.tedw.beans.Usuario</class>
		<class>br.upf.ads.tedw.beans.Cliente</class>
		<class>br.upf.ads.tedw.beans.Administrador</class>
		<class>br.upf.ads.tedw.beans.Projeto</class>
		<class>br.upf.ads.tedw.beans.Requisicao</class>
		<class>br.upf.ads.tedw.beans.RequisicaoAnexo</class>
		<class>br.upf.ads.tedw.beans.RequisicaoProgramada</class>
		<class>br.upf.ads.tedw.beans.RequisicaoAndamento</class>
		<class>br.upf.ads.tedw.beans.Estado</class>

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/aula" />
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="masterkey" />
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="hibernate.hbm2ddl.auto" value="update"/> 
		</properties>
	</persistence-unit>
</persistence>
